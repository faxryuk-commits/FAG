  nextActionAt    DateTime?
  nextAction      String?   // Следующее действие
  
  // Дополнительные данные из AmoCRM
  amoCrmData      Json?     // Все поля из AmoCRM
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([source, sourceId])
  @@index([status])
  @@index([score])
  @@index([segment])
  @@index([assignedTo])
  @@index([phone])
  @@index([email])
  @@map("leads")
}

// Заметки к лиду
model LeadNote {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  text      String   @db.Text
  authorId  String?  // Кто написал
  
  createdAt DateTime @default(now())
  
  @@index([leadId])
  @@map("lead_notes")
}

// Касание (контакт с лидом)
model Touch {
  id            String   @id @default(cuid())
  leadId        String
  lead          Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  // Тип касания
  channel       String   // email, sms, telegram, whatsapp, call, meeting
  direction     String   // outbound, inbound
  
  // Содержимое
  subject       String?  // Тема (для email)
  content       String?  @db.Text // Текст сообщения
  
  // Статус
  status        String   @default("sent") // pending, sent, delivered, opened, clicked, replied, failed
  
  // Метаданные
  metadata      Json?    // { messageId, deliveredAt, openedAt, etc. }
  
  // Ответ
  response      String?  @db.Text // Ответ клиента
  responseAt    DateTime?
  
  // Результат
  outcome       String?  // positive, negative, neutral, no_response
  
  // AI анализ ответа
  aiAnalysis    Json?    // { sentiment, intent, objections, nextAction }
  
  // Связь с кампанией
  campaignId    String?
  campaign      Campaign? @relation(fields: [campaignId], references: [id])
  
  // Кто выполнил
  performedBy   String?  // userId или "ai_robot"
  
  createdAt     DateTime @default(now())
  
  @@index([leadId])
  @@index([channel])
  @@index([status])
  @@index([campaignId])
  @@map("touches")
}

// AI Диалог (история общения с AI-роботом)
model AIConversation {
  id            String   @id @default(cuid())
  leadId        String
  lead          Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  // Канал диалога
  channel       String   // telegram, whatsapp, email
  
  // Статус диалога
  status        String   @default("active") // active, paused, completed, escalated
  
  // Текущий этап воронки
  stage         String   @default("introduction") // introduction, qualification, demo_pitch, objection_handling, closing
  
  // История сообщений
  messages      AIMessage[]
  
  // Контекст для GPT
  context       Json?    // { leadInfo, previousMessages, currentObjections, etc. }
  
  // Достигнутые цели
  goals         Json?    // { qualified: true, demoScheduled: false, etc. }
  
  // Эскалация
  escalatedAt   DateTime?
  escalatedTo   String?  // userId менеджера
  escalationReason String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([leadId])
  @@index([status])
  @@map("ai_conversations")
}

// Сообщение в AI диалоге
model AIMessage {
  id              String   @id @default(cuid())
  conversationId  String
  conversation    AIConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  // Роль
