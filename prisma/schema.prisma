  id            String   @id @default(cuid())
  
  // Типичное возражение
  objection     String   @db.Text
  
  // Категория
  category      String   // price, time, competitor, need, authority, trust
  
  // Ответы (варианты)
  responses     Json     // [{ response: "...", technique: "feel_felt_found" }]
  
  // Частота появления
  frequency     Int      @default(0)
  
  // Успешность ответов
  successRate   Float?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([category])
  @@map("objections")
}

// Статистика продаж
model SalesStats {
  id            String   @id @default(cuid())
  
  // Период
  date          DateTime @db.Date
  
  // Воронка
  newLeads      Int      @default(0)
  contacted     Int      @default(0)
  qualified     Int      @default(0)
  demosScheduled Int     @default(0)
  demosDone     Int      @default(0)
  proposals     Int      @default(0)
  won           Int      @default(0)
  lost          Int      @default(0)
  
  // Касания
  emailsSent    Int      @default(0)
  smsSent       Int      @default(0)
  telegramSent  Int      @default(0)
  callsMade     Int      @default(0)
  
  // Ответы
  replies       Int      @default(0)
  positiveReplies Int    @default(0)
  
  // AI робот
  aiConversations Int    @default(0)
  aiEscalations   Int    @default(0)
  
  // Выручка
  revenue       Float    @default(0)
  
  @@unique([date])
  @@map("sales_stats")
}

