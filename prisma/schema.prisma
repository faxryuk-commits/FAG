// Лид (потенциальный клиент)
model Lead {
  id              String   @id @default(cuid())
  
  // Основные данные
  name            String?  // Имя контакта
  firstName       String?
  lastName        String?
  company         String?  // Название компании/ресторана
  position        String?  // Должность
  
  // Контакты
  phone           String?
  phoneType       String?  // mobile, landline, unknown
  email           String?
  telegram        String?  // @username или chat_id
  whatsapp        String?
  
  // Источник
  source          String   // amocrm, google_maps, website, cold_outreach, referral
  sourceId        String?  // ID в источнике
  
  // Привязка к ресторану (если есть)
  restaurantId    String?
  
  // Скоринг
  score           Int      @default(0)  // 0-100
  scoreFactors    Json?    // { hasEmail: 10, hasPhone: 20, restaurantSize: 30 }
  
  // Сегмент
  segment         String?  // hot, warm, cold, enterprise, smb
  
  // Теги
  tags            String[]
  
  // Статус в воронке
  status          String   @default("new") // new, contacted, qualified, demo_scheduled, demo_done, negotiation, won, lost, nurturing
  lostReason      String?  // Причина отказа
  
  // Ответственный
  assignedTo      String?  // userId менеджера
  
  // Касания
